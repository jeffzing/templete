{
    "compilerOptions": {
      "outDir": "build/dist",
      "module": "esnext",
      "target": "esnext",
      "lib": ["esnext", "dom"],
      "sourceMap": true,
      "baseUrl": ".",
      "jsx": "react",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      // "suppressImplicitAnyIndexErrors": true,
      // 未使用变量进行报错
      "noUnusedLocals": true,
      "allowJs": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "strict": true,
      "paths": {
        "@/*": ["./src/*"],
        "@@/*": ["./src/.umi/*"]
      }
    },
    "include": [
      "mock/**/*",
      "src/**/*",
      "playwright.config.ts",
      "tests/**/*",
      "test/**/*",
      "__test__/**/*",
      "typings/**/*",
      "config/**/*",
      ".eslintrc.js",
      ".prettierrc.js",
      "jest.config.js",
      "webpack.config.js",
      "mock/*"
  , "src/pages/monitor/utils/columns/.ts"  ],
    "exclude": ["node_modules", "build", "dist", "scripts", "src/.umi/*", "webpack", "jest"]
  }